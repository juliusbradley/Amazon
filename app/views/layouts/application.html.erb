<!DOCTYPE html>
<html>
  <head>
    <title>Amazon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= link_to 'About Us', about_path %>
      <%= link_to 'Contact Us', contact_path %>
      <%= link_to 'Product', products_path %>
      <%= link_to 'New', new_product_path %>


       <% if user_signed_in? %>
       <span> Hello <%= current_user.first_name %>, </span>
       <%= link_to 'Logout', sessions_path, method: :delete, data: {confirm: 'Logout?'} %>
       <% else %>
       <%= link_to 'Sign Up', new_user_path %>
      <%= link_to 'Login', new_session_path %>
      <% end %>
      <hr>


      <% if flash[:notice] %>
      <div class="alert alert-success"><%= flash[:alert] %></div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>

    <%= yield %>
  </body>
</html>
